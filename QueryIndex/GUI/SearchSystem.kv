#:kivy 1.10.1
#:import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    SearchMode:
    PathInput:
        id: screen_path_input
    Query:
        id: screen_query

    AdvanceModeOption:
    DisplayResults:
        id: screen_display_result
